# Database Configuration
# Use either MONGO_URI or MONGODB_URI (both work)
MONGO_URI=mongodb+srv://invoice-user:your_password@cluster.mongodb.net/invoice-app?retryWrites=true&w=majority
# MONGODB_URI=mongodb+srv://invoice-user:your_password@cluster.mongodb.net/invoice-app?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
FRONTEND_URL=https://invoice-frontend.onrender.com

# File Upload Configuration (optional)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif 